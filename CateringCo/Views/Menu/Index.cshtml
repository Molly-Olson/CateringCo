@* @model List<CateringCo.Models.MenuItem> *@

@model CateringCo.ViewModels.MenuItemListViewModel

<h1>
	Menu Items
@* CateringCo formerly known as FoodTruck Menu Index View *@
</h1>
<p>
	Total Menu Items: <strong>@Model.TotalCount</strong>
</p>

@if (Model.MenuItems == null || Model.MenuItems.Count == 0)
{
	@* <p><em>No Menu Items Found</em></p> *@
	<p><em>@Model.EmptyMessage</em></p>
}
else
{
	<ul>
		@foreach (var MenuItem in Model.MenuItems)
		{
			<partial name="_MenuItemCard" model="MenuItem" />
			@* <li>
				<strong>@MenuItem.Name</strong>
				Description @MenuItem.Description 
				For @MenuItem.Price
			</li> *@
		}
	</ul>
}
